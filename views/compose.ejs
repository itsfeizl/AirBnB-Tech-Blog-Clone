<%- include("partials/header.ejs") %>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle">
        <label>Date</label>
        <input class="form-control" type="text" name="postDate">
        <label>Category</label>
        <input class="form-control" type="text" name="postCategory">
        <label>Image</label>
        <input class="form-control" type="text" name="postImage">
        <label>Author</label>
        <input class="form-control" type="text" name="postAuthor">
        <label style="margin-top: 20px">Post</label>
        <textarea class="form-control" name="postContent" rows="5" cols="30"></textarea> 
    </div>
    <button class="btn btn-primary" type="submit">Publish</button>
</form>
